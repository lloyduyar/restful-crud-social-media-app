      overflow: auto;
      /* Enable scrolling when content exceeds the height */
    }

    .image-upload {
      display: flex;
      align-items: center;
      margin-top: 10px;
    }

    .image-upload input {
      display: inline;
    }

    .image-upload label {
      cursor: pointer;
